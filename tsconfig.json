{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "pretty": true,
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,

    "noUnusedLocals": true,
  },
  "include": ["./lib/**/*", "./cli/**/*"],
}
